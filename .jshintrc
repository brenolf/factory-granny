{
    "passfail"      : false,
    "maxerr"        : 50,

    "jquery"        : false,
    "prototypejs"   : false,
    "mootools"      : false,
    "dojo"          : false,
    "mocha"         : true,

    "globals"        : {
      "async": true,
      "await": true,
      "use": true,
      "process": true,
      "require": true,
      "module": true,
      "global": true,
      "sinon": true,
      "expect": true,
      "Factories": true,
      "Factory": true,
      "__dirname": true
    },

    "laxbreak"      : true,
    "laxcomma"      : true,

    "debug"         : true,
    "devel"         : true,

    "esnext"        : true,
    "strict"        : false,
    "globalstrict"  : true,

    "noyield"       : true,

    "asi"           : true,
    "boss"          : false,
    "eqeqeq"        : true,
    "evil"          : false,
    "expr"          : true,
    "forin"         : false,
    "latedef"       : true,
    "loopfunc"      : false,
    "noarg"         : true,
    "scripturl"     : false,
    "shadow"        : "inner",
    "supernew"      : true,
    "unused"        : true,
    "undef"         : true,
    "freeze"        : true,
    "maxdepth"      : 2,
    "maxparams"     : 7
